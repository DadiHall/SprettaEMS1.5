<div class="row">

<div class="col-md-6 col-md-offset-3">
<div class="well">
	<%= form_for @cleaning, html: {class: 'form-horizontal'} do |f| %>

	<div class="control-group">	
		<%= f.label :date, class: 'control-label' %><br>
			<div class="controls">
				<%= f.date_select :date %>
			</div>
	</div>	

	<div class="control-group">	
		<%= f.label :cleaning_type, class: 'control-label' %><br>
			<div class="controls">
				<%= f.text_field :cleaning_type %>
          </div>
	</div>	

	<div class="control-group">	
		<%= f.label :cleaning_liter, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :cleaning_liter %>
			</div>
	</div>	

	<div class="control-group">	
		<%= f.label :cleaning_cost, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :cleaning_cost %>
			</div>
	</div>	

	<div class="control-group">	
		<%= f.label :env_clean_ratio, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :env_clean_ratio %>
			</div>
	</div>	



	<div class="control-group">
	    <div class="controls">
	      <%= f.submit class: 'btn btn-xs btn-warning' %>
	    </div>  
	  </div>

	<% end %>	
	</div>
	<%= link_to 'Back', cleanings_path %>
</div>
</div>