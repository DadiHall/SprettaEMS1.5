<div class="row">

<div class="col-md-6 col-md-offset-3">
<div class="well">
	<%= form_for @electro, html: {class: 'form-horizontal'} do |f| %>

	<div class="control-group">	
		<%= f.label :date, class: 'control-label' %><br>
			<div class="controls">
				<%= f.date_select :date %>
			</div>
	</div>	

	<div class="control-group">	
		<%= f.label :building_name, class: 'control-label' %><br>
			<div class="controls">
				<%= f.text_field :building_name %>
          </div>
	</div>	

	<div class="control-group">	
		<%= f.label :electricity_kwst, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :electricity_kwst %>
			</div>
	</div>	

	<div class="control-group">	
		<%= f.label :electricity_cost, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :electricity_cost %>
			</div>
	</div>	

	<div class="control-group">	
		<%= f.label :kwst_staff_ratio, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :kwst_staff_ratio %>
			</div>
	</div>	

		<div class="control-group">	
		<%= f.label :kwst_square_meter_ratio, class: 'control-label' %><br>
			<div class="controls">
				<%= f.number_field :kwst_square_meter_ratio %>
			</div>
	</div>	



	<div class="control-group">
	    <div class="controls">
	      <%= f.submit class: 'btn btn-xs btn-warning' %>
	    </div>  
	  </div>

	<% end %>	
	</div>
	<%= link_to 'Back', cleanings_path %>
</div>
</div>