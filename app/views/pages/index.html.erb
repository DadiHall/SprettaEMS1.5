<div class="row">

	<% if user_signed_in? %>
		<div class="panel panel-default">
  			<div class="panel-heading">
    			<h3 class="panel-title">Þínar tölur <%= current_user.profile.name %></h3>
  			</div>
 			 <div class="panel-body">
			
				<div class="row">
					<!-- Magn pappírs yfir allan rekstur-->
					<div class=" col-md-3">
  						<div class="panel panel-info">
  							<div class="panel-heading">
   							 <h3 class="panel-title">Pappírs magn fyrir hvert stöðugildi</h3>
  							</div>
  								<div class="panel-body text-center">
    								<%= @paper_weight_per_capita %> -Kg.
  								</div>
						</div>
					</div>	
					<!-- Fjöldi trjáa sem er fórnað f. pappírinn -->
  					<div class=" col-md-3">
	  					<div class="panel panel-info">
	  						<div class="panel-heading">
	   							 <h3 class="panel-title">Fjöldi tjráa mv. Pappírsnotkun.</h3>
	  						</div>
	  							<div class="panel-body">
	    							<%= @paper_tree_ratio.to_f * 15 %> - Tré.
	  							</div>
						</div>
					</div>	
					<!-- KWst rafmagn/ mv.stöðug.  -->
					<div class=" col-md-3">
	  					<div class="panel panel-info">
	  						<div class="panel-heading">
	   							 <h3 class="panel-title">KWst á hvert stöðugildi</h3>
	  						</div>
	  							<div class="panel-body">
	    							<%= @electro_total_per_capita %>
	  							</div>
						</div>
					</div>	

					<!-- KWst rafmagn/ mv.stöðug.  -->
					<div class=" col-md-3">
	  					<div class="panel panel-info">
	  						<div class="panel-heading">
	   							 <h3 class="panel-title">KWst mv. hvern m&sup2;</h3>
	  						</div>
	  							<div class="panel-body">
	    							<%= number_with_precision(@electro_total_per_m2.to_f, precision: 2)%> ,-kwst/m&sup2;
	  							</div>
						</div>
					</div>	
         		</div>	
    		   		 
		</div>
	</div> <!-- Panel body end -->
</div>	<!-- Panel end -->

		<div class="row">
			<div class="container">
				<%= link_to "Pappír", papers_path, class: 'btn btn-primary' %>
				<%= link_to "Ræstiefni", cleanings_path, class: 'btn btn-primary' %>
				<%= link_to "Rafmagn", electros_path, class: 'btn btn-primary' %>
			</div>
		</div>

	<% else %>
		<div class="jumbotron">
			<div class="container">
  				<h1>Welcome to Spretta</h1>
         			 <p>Vettvagnur fyrir umhverfisstjórn fyrirtækja</p>

         		<%= link_to "Nýskrá", new_user_registration_path, class: 'btn btn-primary' %>
    		</div>     		 
		</div>
	<% end %>

<div class="row well">
	
		<div class="col-md-3">
		
			<div class="panel panel-warning">
	  			<div class="panel-heading">
	   				<h6 class="panel-title">Meðaltals Pappírsnotkun Viðskiptavina Sprettu</h6>
	  			</div>
	  				<div class="panel-body text-center">
						<h3><%= @all_users_paper_average.to_i %> </h3>-kg.
					</div>
			</div>			
		</div>

		<div class="col-md-3">
		
			<div class="panel panel-warning">
	  			<div class="panel-heading">
	   				<h6 class="panel-title">Meðaltal trjáa sem eru notuð við framleiðslu á pappír sem notaður er af vðskiptavinum</h6>
	  			</div>
	  				<div class="panel-body text-center">
						<h3><%= number_with_precision(@all_users_tree_average * 15, precision: 2)  %></h3> -Tré
					</div>
			</div>			
		</div>
	
	
</div>	
<%= link_to "Create your profile", new_user_profile_path(current_user) if current_user %>


</div>