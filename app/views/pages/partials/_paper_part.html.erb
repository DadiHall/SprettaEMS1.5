<div class="col-md-12">
						<div class="col-md-4 chart-box">
		 					
						 <%= line_chart [
                  {name: "Paper #{current_user.profile.name}", data: current_user.papers.group_by_month(:updated_at).sum(:paper_weight)},
                  {name: "UmhverfisvænnPaper a", data: current_user.papers.group_by_month(:updated_at).sum(:env_paper_weight)}], { stacked: true, height: "300px", xtitle: "Pappírsmagn", ytitle: "Kg/Pappír"} %>
					
						</div>
						
					
				
			<div class="col-md-4 chart-box">
		 				

							 <%= column_chart [
                  {name: "Paper #{current_user.profile.name}", data: current_user.papers.group(:paper_type).sum(:paper_weight)},
                  {name: "UmhverfisvænnPappír", data: current_user.papers.group(:paper_type).sum(:env_paper_weight)}], {  height: "300px", xtitle: "Pappírsmagn", ytitle: "Kg/Pappír"} %>
						</div>



			<div class="col-md-4 chart-box">
		 					
						 <%= column_chart [
                  {name: "Kostnaður #{current_user.profile.name}", data: current_user.papers.group_by_month(:updated_at, format:"%B").sum(:paper_cost)},
                  {name: "Kostnaður Allir", data: Paper.group_by_month(:updated_at, format:"%B").average(:paper_cost)}], { stacked: true, height: "300px", xtitle: "Tímabil", ytitle: "Kostnaður/Pappír"} %>
					
						</div>


</div>	

			

