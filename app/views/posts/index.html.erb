<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render ('post_part') %>
    <div class="col-md-3 well" id="tag_cloud">
      <h3>tags</h3>
      <% tag_cloud Post.tag_counts, %w[css1 css2 css3 css4] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>

      <% end %>
    </div>
  </div>
</div>