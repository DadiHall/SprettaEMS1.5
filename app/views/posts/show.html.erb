<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well">
			<h3><%= @post.title %></h3>
			<p><%= @post.content %></p>
		</div>	
		<!-- comments -->

		<h5>Fjöldi svara: <%= @post.comments.count %></h5>
			<% if signed_in? %>
			<%= render @post.comments %>

			<% else %>
			<%= "þú verður að vera með Sprettu reikning til að sjá svör" %>
			<% end %> <br>
			
		<h4> Reply to thread </h4>
			<% if signed_in? %>
			<%= render 'comments/form' %>

			<%else %>
			<%= "þú verður að vera skráður inn til að svara spurningu" %>
			<% end %> <br>

		<%= link_to "Edit", edit_post_path(@post) %> |
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to do this?
			"} %> |
			<%= link_to "Back", posts_path %>
	</div>
</div>	
