

<div class="col-md-8 col-md-offset-1 well">
<h3>Samburður Ferðir</h3>
		<div class="col-md-6">

			<table class="table table-hover table-box-compare ">
				<thead>
					<th>Samburður - Bílferðir</th>
					<th><%= @user.profile.name %></th>
					<th><%= current_user.profile.name %></th><br>
				</thead>
				<tbody>
					<tr>
						<td>Heildar km í bílferðir</td>
						<td><strong><%= @transport_km_user %> km </strong></td>
						<td><strong><%= @transport_km %> km </strong></td>
					</tr>
				   <tr>
						<td>Km f. hvert stöðugildi</td>
						<td> <strong><%=  @transport_km_staff_ratio_user %> km </strong></td>
						<td><strong><%=  @transport_km_staff_ratio %> km </strong></td>
				   </tr>	
						<br>
					<tr>
						<td> Heildar losun co2 v. ferða</td>
						<td> <strong><%=  @transport_co2_km_user %> kg/co2 </strong></td>
						<td> <strong><%=  @transport_co2_km %> kg/co2 </strong></td>
					</tr>

					<tr>
						<td>Losun co2 f. hvert stöðugildi</td>
						<td> <strong><%=  @transport_co2_km_staff_ratio_user %> kg/co2 </strong></td>
						<td> <strong><%=  @transport_co2_km_staff_ratio %> kg/co2 </strong></td>
					</tr>
					
					
				</tbody>
			</table>	
		</div>

		<div class="col-md-6">
		Bílferðir Samanburður við <%= @user.profile.name %>
		 					<%= line_chart [
  								{name: "losun co2 vegna bílferða #{current_user.profile.name}", data: current_user.transports.map{|t| [t.date, t.transport_km * (0.1404)] }, 'interpolateNulls':true},
  								
  								{name: "losun co2 vegna bílferða #{@user.profile.name}", data: @user.transports.map{|t| [t.date, t.transport_km * (0.1404)] }, 'interpolateNulls':true} ] %>
  				
		</div>

		<div class="col-md-6">

			<table class="table table-hover table-box-compare ">
				<thead>
					<th>Samburður - Flug</th>
					<th><%= @user.profile.name %></th>
					<th><%= current_user.profile.name %></th><br>
				</thead>
				<tbody>
					<tr>
						<td>Heildar km fjöldi flugferða</td>
						<td><strong><%= @transport_flight_km_user %> km </strong></td>
						<td><strong><%= @transport_flight_km %> km </strong></td>
					</tr>
				   <tr>
						<td> Km fjöldi flugferðir f. hvert stöðugildi</td>
						<td> <strong><%= @transport_flight_co2_staff_ratio_user %> km </strong></td>
						<td><strong><%=  @transport_flight_co2_staff_ratio %> km </strong></td>
				   </tr>	
						<br>
					<tr>
						<td> Heildar losun co2 v. flugferða</td>
						<td> <strong><%=  @transport_flight_co2_user %> kg/co2 </strong></td>
						<td> <strong><%=  @transport_flight_co2 %> kg/co2 </strong></td>
					</tr>

					<tr>
						<td>Losun co2 f. hvert stöðugildi v. flugferða</td>
						<td> <strong><%=  @transport_flight_co2_staff_ratio_user %> kg/co2 </strong></td>
						<td> <strong><%=  @transport_flight_co2_staff_ratio %> kg/co2 </strong></td>
					</tr>
					
					
				</tbody>
			</table>	
		</div>

		<div class="col-md-6">
		Flugferðir Samanburður við <%= @user.profile.name %>
		 					<%= line_chart [
  								{name: "losun co2 vegna flugferða #{current_user.profile.name}", data: current_user.transports.map{|t| [t.date, t.transport_km * (0.1722)  ] }, 'interpolateNulls':true},
  								
  								{name: "losun co2 vegna flugferða #{@user.profile.name}", data: @user.transports.map{|t| [t.date, t.transport_flight_km.to_i * (0.1722)  ] }, 'interpolateNulls':true} ] %>
  				
		</div>
</div>		