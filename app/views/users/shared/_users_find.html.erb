<div class="row">

	<div class="col-md-8 col-md-offset-2">
		<ul class="list-unstyled">
		<% @users.each do |user| %>
		
			<% if user.profile %>
			<li>
				<div class="well row <%= cycle("white-bg", '') %>">
				  <% unless current_user == user %>
					<div>
					
						<%= link_to user do %>
						<h2><%= user.profile.name %></h2>
						
						<%= link_to "Gerast vinur", friendships_path(:friend_id => user), :method => :post %>
						 <%= link_to 'Send message', new_message_path(to: user.id), class: 'btn btn-default btn-sm' %>
						 <p><%= user.profile.description %></p>
						<% end %>
						
						
					</div>
				  <% end %>	
				</div>	
			</li>
		<% end %>
		<% end %>
		</ul>
	</div>
</div>

<ul>
  <% @users.each do |user| %>
    <li>
      <strong><%= user.name %></strong>
      <% unless current_user == user %>
        <%= link_to 'Send message', new_message_path(to: user.id), class: 'btn btn-default btn-sm' %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>